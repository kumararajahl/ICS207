function hasS (letter : char ) : boolean
if letter = "S" or letter = "s" then
  result true
else
  result false
end if
end isUppercase

% main program

var word : string
var isS : boolean := false

put "Please enter a word : " ..
get word :*

for i : 1 .. length(word)
  if hasS(word(i)) then
    isS := true
  end if
end for

if isS then
  put "Your word contains the letter s. "
else
  put "Your word doesn't have s. "
end if
  
